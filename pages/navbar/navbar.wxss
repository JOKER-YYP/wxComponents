/* pages/navbar/navbar.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.control-group {
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.group-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.button-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.button {
  flex: 1;
  min-width: 200rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 12rpx 0;
  text-align: center;
  border: none;
}

.button.active {
  background: #1677ff;
  color: white;
}