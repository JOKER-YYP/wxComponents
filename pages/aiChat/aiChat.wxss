/* pages/aiChat/aiChat.wxss */
.container {
  width: 100%;
  background: white;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.hero {
  padding: 60rpx 50rpx;
  background: #f0f7ff;
  text-align: center;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.hero-title {
  font-size: 42rpx;
  font-weight: 600;
  color: #1e3a8a;
  margin-bottom: 46rpx;
}

.hero-subtitle {
  font-size: 32rpx;
  color: #1e40af;
  margin-bottom: 54rpx;
}

.ai-textarea {
  border: 1rpx solid #c9c9c9;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 20rpx;
  margin-bottom: 54rpx;
}

.ai-textarea-info {
  text-align: start;
  padding: 8rpx 10rpx;
  height: 154rpx;
}

.question-examples {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 26rpx;
  margin-bottom: 54rpx;
}

.question-card {
  background: white;
  border-radius: 20rpx;
  padding: 28rpx;
  width: 520rpx;
  text-align: left;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #3b82f6;
  transition: all 0.2s;
}

.question-card:active {
  transform: translateY(-5rpx);
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #2563eb;
}

.card-title {
  color: #1e3a8a;
  margin-bottom: 18rpx;
  font-weight: 600;
}

.card-subtitle {
  color: #4b5563;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.messages {
  box-sizing: border-box;
  /* flex: 1; */
  padding: 36rpx;
  overflow-y: auto;
  transition: height 0.5s ease;
}

.flex-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 38rpx;
  min-height: 100%;
}

.message {
  display: inline-flex;
  box-sizing: border-box;
  /* max-width: 85%; */
  padding: 26rpx 34rpx;
  border-radius: 24rpx;
  position: relative;
  animation: fadeIn 0.3s ease;
  margin-bottom: 30rpx;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.user-message {
  background: #3b82f6;
  color: white;
  align-self: flex-end;
  border-bottom-right-radius: 6rpx;
}

.ai-message {
  background: white;
  color: #1f2937;
  border: 1rpx solid #e5e7eb;
  align-self: flex-start;
  border-bottom-left-radius: 6rpx;
  box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.03);
}

.thinking-process {
  background: #f0f9ff;
  border: 1rpx solid #dbeafe;
  border-radius: 20rpx;
  padding: 30rpx;
  /* margin-top: 24rpx; */
}

.highlight {
  background: linear-gradient(to right, #dbeafe, #dbeafe);
  padding: 0 8rpx;
  border-radius: 8rpx;
}

.process-step {
  margin-bottom: 36rpx;
}

.step-title {
  display: flex;
  align-items: center;
  gap: 18rpx;
  margin-bottom: 28rpx;
  font-weight: 600;
  color: #1e40af;
}

.keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx;
  margin-left: 48rpx;
}

.keyword {
  background: #dbeafe;
  color: #1e40af;
  padding: 10rpx 24rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.sub-questions {
  margin-top: 28rpx;
  padding-left: 36rpx;
  border-left: 3rpx solid #dbeafe;
}

.sub-question {
  margin-bottom: 24rpx;
  color: #4b5563;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 16rpx;
}

.sub-question-text::before {
  content: "â€¢";
  color: #3b82f6;
  font-weight: bold;
  margin-right: 12rpx;
}

.typing-indicator {
  display: flex;
  align-items: center;
  padding: 28rpx;
  background: #f0f7ff;
  border-radius: 50%;
  width: fit-content;
  margin-top: 24rpx;
}

.dot {
  width: 15rpx;
  height: 15rpx;
  background: #3b82f6;
  border-radius: 50%;
  margin: 0 5rpx;
  animation: pulse 1.5s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.5s;
}

.dot:nth-child(3) {
  animation-delay: 1s;
}

@keyframes pulse {
  0%, 100% { opacity: 0.4; transform: scale(0.8); }
  50% { opacity: 1; transform: scale(1); }
}

.related-searches {
  margin-top: 48rpx;
  padding-top: 36rpx;
  border-top: 2rpx dashed #d1d5db;
}

.related-title {
  font-weight: 600;
  color: #1e40af;
  margin-bottom: 26rpx;
}

.conclusion-section {
  margin-top: 50rpx;
  padding-top: 40rpx;
  border-top: 4rpx solid #dbeafe;
}

.conclusion-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e40af;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.conclusion-content {
  background: #f9fbfd;
  border-radius: 24rpx;
  padding: 30rpx;
  border: 2rpx solid #e5e7eb;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.search-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.search-tag {
  background: #f0f9ff;
  border: 1rpx solid #dbeafe;
  color: #1e40af;
  padding: 14rpx 28rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  transition: all 0.2s;
}

.plus-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.input-area {
  padding: 36rpx;
  background: white;
  border-top: 1rpx solid #e5e7eb;
}

.input-container {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.input-box {
  flex: 1;
  display: flex;
  background: #f3f4f6;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid #e5e7eb;
}

.input-box input {
  width: 100%;
  padding: 24rpx 36rpx;
  border: none;
  background: transparent;
  font-size: 28rpx;
  outline: none;
}

.input-box button {
  width: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #3b82f6;
  color: white;
  border: none;
  padding: 0;
  font-size: 28rpx;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

.send-icon {
  width: 64rpx;
  height: 64rpx;
}

.disclaimer {
  text-align: center;
  margin-top: 28rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.ai-response {
  line-height: 1.6;
}

.citation {
  background: #f0f9ff;
  padding: 28rpx;
  border-radius: 18rpx;
  margin: 30rpx 0;
  font-size: 26rpx;
  border-left: 5rpx solid #3b82f6;
}

.citation-title {
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1e40af;
}

.citation-content {
  color: #4b5563;
}

.bold {
  font-weight: bold;
}

.footer {
  text-align: center;
  padding: 28rpx;
  background: #f3f4f6;
  color: #6b7280;
  font-size: 26rpx;
}