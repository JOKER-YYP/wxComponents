/* components/y-calendar/y-calendar.wxss */
.calendar-container {
  width: 100%;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 日历头部 */
.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: white;
  border-bottom: 1rpx solid #ebedf0;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
}

.nav-button {
  width: 64rpx;
  height: 64rpx;
  font-size: 40rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f2f3f5;
  color: #969799;
  transition: all 0.2s;
}

.left-arrow {
  height: 12rpx;
  width: 12rpx;
  border-top: solid 5rpx #323233;
  border-right: solid 5rpx #323233;
  transform: rotate(-135deg) translateY(-2rpx);
}

.right-arrow {
  height: 12rpx;
  width: 12rpx;
  border-top: solid 5rpx #323233;
  border-right: solid 5rpx #323233;
  transform: rotate(45deg) translateY(-2rpx);
}

.nav-button:active {
  background: #e8e8e8;
}

/* 星期栏 */
.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 20rpx 0;
  background: white;
  border-bottom: 1rpx solid #ebedf0;
}

.weekday {
  font-size: 28rpx;
  color: #969799;
}

/* 日期网格 */
.days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
  padding: 24rpx;
  background: white;
}

.day {
  height: 96rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  border-radius: 16rpx;
  position: relative;
  transition: all 0.2s;
}

.day.current {
  color: #323233;
}

.day.other-month {
  color: #c8c9cc;
}

.day.today {
  color: #1677ff;
  font-weight: bold;
}

.day.selected {
  background: #1677ff;
  color: white;
}

.day.range {
  background: #1677ff1A;
}

.day.range-start, .day.range-end {
  background: #1677ff;
  color: white;
}

.day.disabled {
  color: #c8c9cc;
  opacity: 0.5;
}

.day .mark {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ee0a24;
}

.range-label {
  font-size: 20rpx;
  line-height: 1;
  margin-top: 4rpx;
  font-weight: normal;
}

/* 底部按钮 */
.calendar-footer {
  display: flex;
  justify-content: space-between;
  padding: 32rpx;
  border-top: 1rpx solid #ebedf0;
  background: white;
}

.calendar-button {
  flex: 1;
  margin: 0 16rpx;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s;
}

.button-reset {
  color: #646566;
  background: #f2f3f5;
}

.button-reset:active {
  background: #e8e8e8;
}

.button-confirm {
  color: white;
  background: #1677ff;
}

.button-confirm:active {
  background: #0e63e6;
}

.day.disabled {
  color: #c8c9cc;
  opacity: 0.5;
  pointer-events: none;
}