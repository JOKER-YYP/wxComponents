/* components/y-loading/y-loading.wxss */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 旋转动画 */
.rotating {
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 三个点样式 */
.dot-loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #1677ff;
  margin: 0 8rpx;
  animation: bounce 1.4s infinite ease-in-out both;
}

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

/* 横向布局 */
.horizontal {
  display: flex;
  align-items: center;
}

/* 竖向布局 */
.vertical {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #999;
}
