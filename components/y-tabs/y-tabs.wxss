/* components/y-tabs/y-tabs.wxss */
.tabs-container {
  position: relative;
  display: inline-flex;
  align-items: center;
  padding: 12rpx 16rpx;
  overflow: hidden;
  background: rgba(242, 242, 242, 1);
  border-radius: 16rpx;
}

.tabs-container .item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: calc((100vw - 104rpx) / 4);
  padding: 20rpx 0;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  cursor: pointer;
  z-index: 66;
}

.slider {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  color: transparent;
  background-color: #fff;
  border: 1rpx solid rgba(191, 191, 191, 1);
  border-radius: 16rpx;
  width: calc((100vw - 104rpx) / 4);
  padding: 20rpx 0;
  z-index: 50;
}

.is-transition {
  transition: all ease;
}

.actived {
  z-index: 99;
  color: rgba(51, 51, 51, 1) !important;
  border-radius: 16rpx;
}