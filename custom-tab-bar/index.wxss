/* custom-tab-bar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  display: flex;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #999;
  position: relative;
}

.tab-bar-item.active {
  color: #1677ff;
}

.tab-icon {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 5rpx;
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 16rpx;
  background-color: #FF6B6B;
  color: white;
  font-size: 20rpx;
  text-align: center;
  padding: 0 8rpx;
}
